generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String   @id @default(cuid())
  title          String
  description    String
  publicId       String   @unique
  userId         String
  originalSize   String
  compressedSize String
  duration       Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Image {
  id             String   @id @default(cuid())
  publicId       String   @unique
  userId         String
  originalSize   String
  compressedSize String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
